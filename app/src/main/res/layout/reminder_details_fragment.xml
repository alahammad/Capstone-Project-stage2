<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/title"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_shape"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_shape"
        android:id="@+id/exDate"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/noTimes"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_shape"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/exDate"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/exDate"
        android:layout_alignStart="@+id/exDate"
        android:layout_alignRight="@+id/exDate"
        android:layout_alignEnd="@+id/exDate" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/noTimes"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/noTimes"
        android:layout_alignEnd="@+id/noTimes"
        android:layout_alignLeft="@+id/noTimes"
        android:layout_alignStart="@+id/noTimes"
        android:layout_above="@+id/delete"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:id="@+id/delete"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal|bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/delete_button"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />
</RelativeLayout>